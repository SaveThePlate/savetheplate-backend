generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Status {
  expired
  confirmed
  cancelled
  pending
}


enum UserRole {
  CLIENT
  PROVIDER
  NONE
}


model User {
  id           Int     @id @default(autoincrement())
  email        String  @unique
  username     String
  location     String?
  mapsLink     String? @db.Text
  longitude    Float?
  latitude     Float?
  phoneNumber  Int?
  profileImage String?
  orders       Order[]
  offers       Offer[]
  role         UserRole
}

model Offer {
  id             Int      @id @default(autoincrement())
  ownerId        Int?
  title          String
  description    String
  price          Float?
  originalPrice  Float?
  expirationDate DateTime
  pickupLocation String
  mapsLink       String?  @db.Text
  latitude       Float?
  longitude      Float?
  images         Json
  quantity       Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  orders         Order[]
  owner          User?    @relation(fields: [ownerId], references: [id])
}

model Order {
  id        Int      @id @default(autoincrement())
  quantity  Int
  userId    Int
  offerId   Int
  status      Status    @default(pending)
  qrCodeToken String?  @unique
  user      User     @relation(fields: [userId], references: [id])
  offer     Offer    @relation(fields: [offerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt   DateTime?  @updatedAt
  collectedAt DateTime?
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String?
  message   String   @db.Text
  userRole  String?  // CLIENT, PROVIDER, or GUEST
  userId   Int?     // Optional: link to user if logged in
  createdAt DateTime @default(now())
  read      Boolean  @default(false)
}
