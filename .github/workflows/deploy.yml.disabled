name: Backend Deploy

on:
  push:
    branches: [ main, master ]
  workflow_dispatch:

env:
  IMAGE_NAME: savetheplate-backend

jobs:
  build_and_push:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Build container image
        run: docker build -t ${{ secrets.DOCKER_USERNAME }}/$IMAGE_NAME:$(echo $GITHUB_SHA | head -c7) .
      - name: Login to Docker Hub
        run: echo "${{ secrets.DOCKER_PASSWORD }}" | docker login -u "${{ secrets.DOCKER_USERNAME }}" --password-stdin
      - name: Push image to Docker Hub
        run: docker push ${{ secrets.DOCKER_USERNAME }}/$IMAGE_NAME:$(echo $GITHUB_SHA | head -c7)

  deploy:
    runs-on: ubuntu-latest
    needs: build_and_push
    env:
      DOCKER_USERNAME: ${{ secrets.DOCKER_USERNAME }}
      DOCKER_PASSWORD: ${{ secrets.DOCKER_PASSWORD }}
    steps:
      - name: Deploy to server via SSH
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ secrets.PROD_SERVER_IP }}
          username: ${{ secrets.PROD_SERVER_USER }}
          key: ${{ secrets.PROD_SSH_PRIVATE_KEY }}
          port: 22
          timeout: 60s
          command_timeout: 30m
          envs: IMAGE_NAME,GITHUB_SHA,DOCKER_USERNAME,DOCKER_PASSWORD
          script: |
            # Login to Docker Hub
            echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin
            
            # Pull new image
            docker pull $DOCKER_USERNAME/$IMAGE_NAME:$(echo $GITHUB_SHA | head -c7)
            
            # Stop running container
            docker stop $IMAGE_NAME 2> /dev/null || true
            
            # Remove old container
            docker rm $IMAGE_NAME 2> /dev/null || true
            
            # Run new container
            docker run -d \
              -p 3001:3001 \
              -v /var/www/save-the-plate/backend/store:/usr/src/app/store \
              -v /var/www/save-the-plate/backend/.env:/usr/src/app/.env:ro \
              --env-file /var/www/save-the-plate/backend/.env \
              --restart unless-stopped \
              --name $IMAGE_NAME \
              $DOCKER_USERNAME/$IMAGE_NAME:$(echo $GITHUB_SHA | head -c7)
